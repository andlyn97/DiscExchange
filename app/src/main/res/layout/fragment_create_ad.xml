<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CreateAdFragment">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/createImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/createTakeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ta bilde"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginHorizontal="20dp"
                />

            <Button
                android:id="@+id/createSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Velg bilde"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginHorizontal="20dp"/>
        </LinearLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Navn" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp">

            <!--TODO: Opprett Image-->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Merke" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp">
            <!-- TODO: Bytte denne til en "color picker"? -->

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createFlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Flight" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Color" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createInk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ink" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Beskrivelse"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createWish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ã˜nsker"
                android:inputType="textMultiLine"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/createBtnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opprett"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>