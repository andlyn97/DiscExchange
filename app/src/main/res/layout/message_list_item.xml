<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="-24dp"
    tools:layout_editor_absoluteY="0dp"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/messageSentFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Message Placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageSentFrom"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/messageDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Date Placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/messageSentFrom"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="right"/>

</androidx.constraintlayout.widget.ConstraintLayout>