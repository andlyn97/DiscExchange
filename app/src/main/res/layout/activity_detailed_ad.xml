<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedAdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="404dp"
            android:layout_height="209dp"
            app:srcCompat="@drawable/firebird" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="524dp"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navn: Firebird" />

            <TextView
                android:id="@+id/flightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flight: 9 3 0 4" />

            <TextView
                android:id="@+id/conditionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tilstand: 7 / 10" />

            <TextView
                android:id="@+id/colorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farge: Grønn" />

            <TextView
                android:id="@+id/inkTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ink: Ingen" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beskrivelse: Har en del bruksmerker, da jeg har kastet den en del. Ingen hakk. Holder til i Halden." />

            <TextView
                android:id="@+id/wishesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ønsker: P2 C-line" />

            <Button
                android:id="@+id/chatWithBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kontakt Andreas" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>